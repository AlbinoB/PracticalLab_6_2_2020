<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReadWriteActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Text to save"
        android:textSize="20sp"
        android:id="@+id/editTextInsertData"
        android:layout_centerInParent="true"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000"
        android:id="@+id/relativeSend"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:layout_below="@id/editTextInsertData">
        <Button
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/buttonGetData"
            android:text="Get Data"
            android:textSize="20sp"
            android:background="#fff"
            android:textColor="#000"
            android:layout_margin="2dp"
            />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:layout_below="@id/relativeSend">
        <Button
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/buttonSendData"
            android:text="Save Data"
            android:textSize="20sp"
            android:background="#fff"
            android:textColor="#000"
            android:layout_margin="2dp"
            />
    </RelativeLayout>

</RelativeLayout>